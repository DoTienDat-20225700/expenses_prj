{% extends 'ep1/base.html' %} {% load static %} {% load humanize %} {% block
content %}
<div class="row g-4">
  <!-- Announcements -->
  {% if active_announcements %}
  <div class="col-12">
    {% for announcement in active_announcements %}
    <div
      class="alert alert-{{ announcement.priority }} alert-dismissible fade show shadow-sm border-0"
      role="alert"
    >
      <i class="fas fa-bullhorn me-2"></i
      ><strong>{{ announcement.title }}</strong> - {{ announcement.content }}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endfor %}
  </div>
  {% endif %}

  <div class="col-12">
    <h2 class="fw-bold mb-4">
      <i class="fas fa-chart-line me-2 text-primary"></i>Dashboard Tổng Quan
    </h2>
  </div>

  <!-- Summary Cards -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100 card-hover">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <p class="text-muted mb-1 small">Tổng Chi Tiêu</p>
            <h3 class="fw-bold mb-0">
              {{ total_expenses|floatformat:0|intcomma }} ₫
            </h3>
          </div>
          <div class="bg-danger bg-opacity-10 p-3 rounded-3">
            <i class="fas fa-wallet text-danger fs-4"></i>
          </div>
        </div>
        <p class="small text-muted mb-0">
          Tháng này:
          <span class="fw-semibold"
            >{{ this_month_expenses|floatformat:0|intcomma }} ₫</span
          >
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100 card-hover">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <p class="text-muted mb-1 small">Tổng Thu Nhập</p>
            <h3 class="fw-bold mb-0 text-success">
              {{ total_income|floatformat:0|intcomma }} ₫
            </h3>
          </div>
          <div class="bg-success bg-opacity-10 p-3 rounded-3">
            <i class="fas fa-money-bill-wave text-success fs-4"></i>
          </div>
        </div>
        <p class="small text-muted mb-0">
          Tháng này:
          <span class="fw-semibold"
            >{{ this_month_income|floatformat:0|intcomma }} ₫</span
          >
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100 card-hover">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <p class="text-muted mb-1 small">Số Dư</p>
            <h3
              class="fw-bold mb-0 {% if balance >= 0 %}text-success{% else %}text-danger{% endif %}"
            >
              {{ balance|floatformat:0|intcomma }} ₫
            </h3>
          </div>
          <div
            class="{% if balance >= 0 %}bg-success{% else %}bg-danger{% endif %} bg-opacity-10 p-3 rounded-3"
          >
            <i
              class="fas fa-piggy-bank {% if balance >= 0 %}text-success{% else %}text-danger{% endif %} fs-4"
            ></i>
          </div>
        </div>
        <p class="small text-muted mb-0">Thu nhập - Chi tiêu</p>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100 card-hover">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <p class="text-muted mb-1 small">Ngân Sách Tháng</p>
            <h3 class="fw-bold mb-0 text-primary">
              {{ budget.total|floatformat:0|intcomma }} ₫
            </h3>
          </div>
          <div class="bg-primary bg-opacity-10 p-3 rounded-3">
            <i class="fas fa-bullseye text-primary fs-4"></i>
          </div>
        </div>
        {% if budget.total > 0 %}
        <p class="small mb-1">
          <span class="text-muted">Đã chi:</span>
          <span class="fw-semibold text-danger"
            >{{ this_month_expenses|floatformat:0|intcomma }} ₫</span
          >
        </p>
        <p class="small mb-0">
          <span class="text-muted">Còn lại:</span>
          <span
            class="fw-bold {% if budget_remaining >= 0 %}text-success{% else %}text-danger{% endif %}"
          >
            {{ budget_remaining|floatformat:0|intcomma }} ₫
          </span>
        </p>
        {% else %}
        <p class="small text-muted mb-0">Chưa đặt ngân sách</p>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0 pt-4">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-chart-pie me-2 text-primary"></i>Chi Tiêu Theo Danh
          Mục
        </h5>
      </div>
      <div class="card-body">
        <canvas id="categoryChart" height="300"></canvas>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0 pt-4">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-chart-line me-2 text-primary"></i>Thu Chi 6 Tháng Gần
          Đây
        </h5>
      </div>
      <div class="card-body">
        <canvas id="incomeExpenseChart" height="300"></canvas>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0 pt-4">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-fire me-2 text-danger"></i>Top Danh Mục
        </h5>
      </div>
      <div class="card-body">
        {% if top_categories %}
        <ul class="list-group list-group-flush">
          {% for cat in top_categories %}
          <li
            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0"
          >
            <span>
              <i class="fas fa-tag me-2 text-muted"></i>
              {{ cat.category__name|default:"Không xác định" }}
            </span>
            <span class="badge bg-primary rounded-pill"
              >{{ cat.total|floatformat:0|intcomma }} ₫</span
            >
          </li>
          {% endfor %}
        </ul>
        {% else %}
        <p class="text-muted text-center py-4">Chưa có dữ liệu chi tiêu</p>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Recent Transactions -->
  <div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0 pt-4">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-history me-2 text-info"></i>Giao Dịch Gần Đây
        </h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          {% for expense in recent_expenses %}
          <li
            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2"
          >
            <div>
              <div class="fw-semibold">
                {{ expense.category.name|default:"Khác" }}
              </div>
              <small class="text-muted">{{ expense.date|date:"d/m/Y" }}</small>
            </div>
            <span class="text-danger fw-bold"
              >-{{ expense.amount|floatformat:0|intcomma }} ₫</span
            >
          </li>
          {% endfor %} {% for income in recent_income %}
          <li
            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2"
          >
            <div>
              <div class="fw-semibold">
                {{ income.source.name|default:"Thu nhập" }}
              </div>
              <small class="text-muted">{{ income.date|date:"d/m/Y" }}</small>
            </div>
            <span class="text-success fw-bold"
              >+{{ income.amount|floatformat:0|intcomma }} ₫</span
            >
          </li>
          {% endfor %}
        </ul>

        {% if not recent_expenses and not recent_income %}
        <p class="text-muted text-center py-4">Chưa có giao dịch nào</p>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Upcoming Recurring -->
  {% if upcoming_recurring %}
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-0 pt-4">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-redo me-2 text-warning"></i>Chi Tiêu Định Kỳ Sắp Đến
          Hạn
        </h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          {% for recurring in upcoming_recurring %}
          <div class="col-md-6 col-lg-4">
            <div class="alert alert-warning mb-0">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h6 class="fw-bold mb-1">{{ recurring.name }}</h6>
                  <p class="mb-1 small">
                    {{ recurring.amount|floatformat:0|intcomma }} ₫
                  </p>
                  <p class="mb-0 small text-muted">
                    <i class="far fa-calendar me-1"></i>{{
                    recurring.next_due_date|date:"d/m/Y" }}
                  </p>
                </div>
                <span class="badge bg-warning"
                  >{{ recurring.get_frequency_display }}</span
                >
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Quick Actions -->
  <div class="col-12">
    <div class="card border-0 shadow-sm bg-gradient">
      <div class="card-body text-center py-4">
        <h5 class="fw-bold mb-4">Thao Tác Nhanh</h5>
        <div class="row g-3">
          <div class="col-6 col-md-3">
            <a href="{% url 'ep1:add_ep1' %}" class="btn btn-danger w-100">
              <i class="fas fa-plus me-2"></i>Thêm Chi Tiêu
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a href="{% url 'ep1:add_income' %}" class="btn btn-success w-100">
              <i class="fas fa-plus me-2"></i>Thêm Thu Nhập
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a
              href="{% url 'ep1:add_recurring' %}"
              class="btn btn-warning w-100"
            >
              <i class="fas fa-redo me-2"></i>Thêm Định Kỳ
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a href="{% url 'ep1:ep1_lists' %}" class="btn btn-primary w-100">
              <i class="fas fa-list me-2"></i>Xem Chi Tiết
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Fetch and render category pie chart
    fetch("{% url 'ep1:chart_category' %}")
      .then((res) => res.json())
      .then((data) => {
        const ctx = document.getElementById("categoryChart").getContext("2d");
        new Chart(ctx, {
          type: "doughnut",
          data: {
            labels: data.labels,
            datasets: [
              {
                data: data.data,
                backgroundColor: [
                  "#FF6384",
                  "#36A2EB",
                  "#FFCE56",
                  "#4BC0C0",
                  "#9966FF",
                  "#FF9F40",
                  "#FF6384",
                  "#C9CBCF",
                  "#4BC0C0",
                  "#FF6384",
                ],
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: "bottom",
              },
            },
          },
        });
      });

    // Fetch and render income vs expense chart
    fetch("{% url 'ep1:chart_income_expense' %}")
      .then((res) => res.json())
      .then((data) => {
        const ctx = document
          .getElementById("incomeExpenseChart")
          .getContext("2d");
        new Chart(ctx, {
          type: "line",
          data: {
            labels: data.labels,
            datasets: [
              {
                label: "Thu Nhập",
                data: data.income,
                borderColor: "#28a745",
                backgroundColor: "rgba(40, 167, 69, 0.1)",
                tension: 0.4,
              },
              {
                label: "Chi Tiêu",
                data: data.expenses,
                borderColor: "#dc3545",
                backgroundColor: "rgba(220, 53, 69, 0.1)",
                tension: 0.4,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: "top",
              },
            },
            scales: {
              y: {
                beginAtZero: true,
              },
            },
          },
        });
      });
  });
</script>

<style>
  .card-hover {
    transition: transform 0.2s ease-in-out;
  }

  .card-hover:hover {
    transform: translateY(-5px);
  }

  .bg-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .bg-gradient .btn {
    font-weight: 600;
  }
</style>
{% endblock %}
